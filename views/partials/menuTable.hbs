                    </tbody>
                  </table>
                </div>

                <div id="beerMenuTableBody">
                  <div class="form-outline mb-4">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample"
                      aria-expanded="false" aria-controls="collapseExample">
                      Filter
                    </button>
                    <div class="collapse" id="collapseExample" style="padding: 1em;">
                      <div class="card card-body">
                        <label class="form-label" for="datatable-search-input">Search By Name</label>
                        <input type="text" id="myInput_beer" onkeyup="beerMenuFunction()"
