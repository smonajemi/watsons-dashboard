<div class="col-xl-8 col-lg-7">

  <div id="exTab3" class="container">

    <div class="card shadow mb-4">
      <div class="tab-content clearfix ">
        <ul class="nav justify-content-center" style="padding: 1em;">
            <li class="nav-item"><a class="nav-link btn btn-outline-info fancyButton" onclick="handleMenuTabs('foodMenu')" type="button" data-toggle="tab">Food Menu</a></li>
            <li class="nav-item"><a class="nav-link btn btn-outline-info fancyButton" onclick="handleMenuTabs('cocktailMenu')" type="button" data-toggle="tab">Cocktail Menu</a></li>
            <li class="nav-item"><a class="nav-link btn btn-outline-info fancyButton" onclick="handleMenuTabs('beerMenu')" type="button" data-toggle="tab">Beer &amp; Wine Menu</a></li>
            <li class="nav-item"><a class="nav-link btn btn-outline-info fancyButton" onclick="handleMenuTabs('qrMenu')" type="button" data-toggle="tab">QR Menu</a></li>
        </ul>
          <div class="card-body">          
            <div class="container">
              <div id="foodMenuTableBody">
                <table class="table table-bordered table-striped" id="addRow_foodMenu">
                <thead>
                  <tr>
                    <th class="col-md-2">Id</th>
                    <th class="">Name</th>
                    <th class="col-sm-1">Price</th>
                    <th class="">Description</th>
                    <th style="text-align:center;"> 
                      <a type="button" class="btn btn-info add-row-foodMenu">
                        <i class="fa fa-plus"></i>
                      </a>
                    </th>
                  </tr>
                </thead>
                <tbody id="table_body">
                 {{#each foodMenuData.data}}
                  <tr>
                    <td style="text-align:center;" id="{{_id}}">{{_id}}</td>
                    <td class="">{{name}}</td>
                    <td class="">{{price}}</td>
                    <td class="">{{description}}</td>
                    <td style="text-align:center; display: flex;">
                      <a class='btn btn-primary' data-toggle='modal' data-target='#foodMenuModal'
                        contenteditable='false'>
                        <span id='span'><i class='fa fa-pencil'></i></span>
                      </a>
                      <a class='btn btn-danger' title='Delete' onclick='onDelete("{{_id}}", "{{menuTitle}}")'>
                        <span id='span'><i class='fa fa-trash'></i></span>
                      </a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
                </table>
              </div>
