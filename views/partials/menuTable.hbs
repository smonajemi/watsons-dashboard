                      <tr>
                        <th class="col-md-2">Id</th>
                        <th class="col-md-3">Name</th>
                        <th class="col-sm-1">Price</th>
                        <th class="">Description</th>
                        <th class="col-md-2">Type</th>
                        <th style="text-align:center;">
                          <a type="button" class='btn-info btn-lg' data-toggle='modal' data-target='#menuModals'>
                            <i class="fa fa-plus"></i>
                          </a>
                        </th>
                      </tr>
                    </thead>
                    <tbody id="table_body">
                      {{#each qrCodeMenuData.data}}
                      <tr>
                        <td style="text-align:center;" id="{{_id}}">{{_id}}</td>
                        <td class="">{{name}}</td>
                        <td class="">{{price}}</td>
                        <td class="">{{description}}</td>
                        <td class="">{{type}}</td>
                        <td style="text-align:center;">
                          <a class='btn btn-primary' data-toggle='modal' data-target='#menuModals'
