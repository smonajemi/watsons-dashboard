        <div class="card shadow mb-4">
          <div class="tab-content clearfix ">
            <ul class="nav justify-content-center" style="padding: 1em;">
              <li class="nav-item active"><a class="nav-link btn btn-outline-info fancyButton active"
                  onclick="handleMenuTabs('foodMenu');" type="button" data-toggle="tab">Food Menu</a></li>
