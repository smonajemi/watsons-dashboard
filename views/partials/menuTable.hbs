                    <div class="collapse" id="collapseExample" style="padding: 1em;">
                      <div class="card card-body">
                        <label class="form-label" for="datatable-search-input">Search By Name</label>
                        <input type="text" id="myInput_cocktail" onkeyup="cocktailMenuFunction()"
                          placeholder="Search for names.." class="form-control">
                      </div>
                    </div>
                  </div>
                  <table class="table table-bordered table-hover table-responsive" id="addRow_cocktailMenu" >
                    <thead class="thead-dark">
                      <tr>
                        <th class="col-md-2">Id</th>
                        <th class="col-md-3">Name</th>
                        <th class="col-sm-1">Price</th>
                        <th class="">Description</th>
                        <th style="text-align:center;">
                          <a type="button" class='btn-info btn-lg' data-toggle='modal' data-target='#menuModals'>
                            <i class="fa fa-plus"></i>
                          </a>
                        </th>
                      </tr>
                    </thead>
                    <tbody id="table_body">
                      {{#each cocktailMenuData.data}}
                      <tr>
                        <td style="text-align:center;" id="{{_id}}">{{_id}}</td>
                        <td class="">{{name}}</td>
                        <td class="">{{price}}</td>
                        <td class="">{{description}}</td>
                        <td style="text-align:center;">
                          <a class='btn btn-primary' data-toggle='modal' data-target='#menuModals'
