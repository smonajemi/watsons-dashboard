{{#if isAdmin}} 
<div class="col-xl-12 col-lg-12 container" >
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">List of users</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-responsive" id="addRow_userList" >
                <thead class="thead-dark">
                    <tr>
                        <th class="col-sm-1">#</th>
                        <th class="col-sm-2">First</th>
                        <th class="col-sm-3">Last</th>
                        <th class="col-sm-4">username</th>
                        <th class="col-sm-1">Role</th>
                        <th class="col-sm-1" style="text-align:center;">
                        Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users.data}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{username}}</td>
                        <td>{{role}}</td>
                        <td style="text-align:center; display: flex;">
                            {{#if isAdmin}}
                            <b> N/A</b>
                            {{else}}
                            <a class="add" title="Add" data-toggle="tooltip"><i class="fa fa-plus"
                                    aria-hidden="true"></i></a>
                            <a class="edit" title="Edit" data-toggle="modal" data-target="#userHandlePasswordModal" onclick='onChangeUserPassword("{{_id}}")'><i
                                    class="fa fa-edit"></i></a>
                            <a class="delete" title="Delete" data-toggle="tooltip" onclick='onDeleteUser("{{_id}}")'><i
                                    class="fa fa-trash"></i>
                            </a>

                            {{/if}}
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="4">No Data Available</td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
            <div class="modal fade" id="userHandlePasswordModal" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Change User Password</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="text-center">
                                {{#if errorMsg}}
                                <div class="alert alert-danger" role="alert">
                                    {{errorMsg}}
                                </div>
                                {{else}}
                                <div class="alert alert-info" role="alert">Update Password</div>
                                {{/if}}
                                <br />
                            </div>
                            <form class="needs-validation user" id="userPasswordForm" action="" method="POST"
                                novalidate>
                                <div class="form-group">
                                    <label for="inputNewPassword">New Password</label>
                                    <input type="password" class="form-control form-control-user" id="inputNewPassword"
                                        required="" name="password" required />
                                </div>
                                <div class="form-group">
                                    <label for="inputRepeatedPassword">Verify Password</label>
                                    <input type="password" class="form-control form-control-user"
                                        id="inputRepeatedPassword" required="" name="rePassword" required />
                                </div>
                                <div class="col text-center mt-2">
                                    <button class="btn btn-secondary btn-user" type="button" data-dismiss="modal"
                                        id="cancel" onclick="window.location.href = '/'">Cancel</button>
                                    <input value="Save" class="btn btn-primary btn-user" type="submit" id="save" />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}